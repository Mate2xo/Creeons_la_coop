<div class="body-wrap">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <section class="slice sct-color-2">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-6">
          <div class="card form-card form-card--style-1">
            <div class="form-header text-center">
              <div class="form-header-icon">
                <i class="fas fa-user-plus fa-3x"></i>
              </div>
            </div>
            <div class="form-body">
              <div class="text-center px-2">
                <h4 class="heading heading-4 strong-400 mb-0">Créer un compte</h4>
                <br />
              </div>

              <form class="form-default mt-4" data-toggle="validator" role="form">

                <div class="col">
                  <div class="col-lg-12">
                    <div class="field">
                      <%= f.label :first_name, "Prénom" %><br />
                      <%= f.text_field :first_name, class: "form-control form-control-lg" %><br />
                    </div>
                  </div>
                </div>

                <div class="col">
                  <div class="col-lg-12">
                    <div class="field">
                      <%= f.label :last_name, "Nom" %><br />
                      <%= f.text_field :last_name, class: "form-control form-control-lg" %><br />
                    </div>
                  </div>
                </div>

                <div class="col">
                  <div class="col-lg-12">
                    <div class="field">
                      <%= f.label :email, "E-mail" %><br />
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %><br />
                    </div>
                  </div>
                </div>

                <div class="col">
                  <div class="col-lg-12">
                    <div class="field">
                      <%= f.label :phone_number, "Numéro de téléphone" %><br />
                      <%= f.text_field :phone_number, class: "form-control form-control-lg" %><br />
                    </div>
                  </div>
                </div>

                <div class="col">
                  <div class="col-lg-12">
                    <div class="field">
                      <%= f.label :password, "Mot de passe" %><br />
                      <% if @minimum_password_length %>
                        <small>(<%= @minimum_password_length %> characters minimum)</small>
                      <% end %><br />
                      <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg" %><br />
                    </div>
                  </div>
                  <div class="col-lg-12">
                    <div class="field">
                      <%= f.label :password_confirmation, "Confirmer mot de passe" %><br />
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg" %><br />
                    </div>
                  </div>
                </div>
                <div class="actions">
                    <%= f.submit "S'inscrire", class: "btn-sign-in btn btn-styled btn-lg btn-block btn-base-1 mt-4" %>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <% end %>
</div><!-- END: body-wrap -->






